<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/container_food_list_linear_layout"
        android:padding="5dp">

        <TextView
            android:textColor="#000000"
            android:textSize="13sp"
            tools:text="Promosi beli satu percuma satu untuk pembelian berjumlah RM20.00 dalam satu resit"
            android:id="@+id/promotion_text"
            android:layout_width="145dp"
            android:layout_height="120dp"
            android:padding="5dp"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:text="Sehingga "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="10sp"
                android:id="@+id/promotion_date_text_view"
                tools:text="12 JUl 2017"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>