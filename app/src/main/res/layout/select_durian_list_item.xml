<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/durian_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


        <LinearLayout
            android:layout_toRightOf="@id/durian_image_view"
            android:layout_toEndOf="@id/durian_image_view"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/durian_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Musang King"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAllCaps="false"/>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warna: "/>
                <TextView
                    android:id="@+id/color_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textColor="@android:color/black"/>

            </LinearLayout>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kepahitan: "/>

            <TextView

                android:id="@+id/bitterness_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitterness"
                android:textColor="@android:color/black"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kemanisan: "/>

                <TextView
                    android:id="@+id/sweetness_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweetness"
                    android:textColor="@android:color/black"/>

        </LinearLayout>






        </LinearLayout>


        <CheckBox
            android:id="@+id/durian_selected_checkbox"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>